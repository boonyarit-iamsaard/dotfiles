{
  /*
    Catppuccin
  */
  "catppuccin.customUIColors": {
    "all": {
      "editorIndentGuide.background1": "surface0",
      "editorIndentGuide.activeBackground1": "surface1",
      "tree.indentGuidesStroke": "surface0",
      "tree.inactiveIndentGuidesStroke": "surface1"
    }
  },
  "catppuccin.workbenchMode": "default",
  "catppuccin.italicComments": true,
  "catppuccin.italicKeywords": true,
  "catppuccin.syncWithIconPack": true,

  /*
    Appearance
  */
  "debug.console.fontFamily": "JetBrainsMono Nerd Font Mono",
  "debug.console.fontSize": 16,
  "debug.toolBarLocation": "docked",
  "editor.bracketPairColorization.enabled": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.fontFamily": "JetBrainsMono Nerd Font Mono",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  // "editor.guides.bracketPairs": false,
  // "editor.guides.indentation": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.lineHeight": 1.5,
  "editor.lineNumbers": "on",
  "editor.minimap.enabled": false,
  "explorer.autoReveal": false,
  "explorer.compactFolders": false,
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font Mono",
  "terminal.integrated.fontSize": 16,
  // "terminal.integrated.lineHeight": 1.35,  // for editor line-height 1.75
  // "terminal.integrated.lineHeight": 1.3, // for editor line-height 1.7
  // "terminal.integrated.lineHeight": 1.275, // for editor line-height 1.5 (default) for Hack
  // "terminal.integrated.lineHeight": 1.25,  // for editor line-height 1.6
  // "terminal.integrated.lineHeight": 1.2, // for editor line-height 1.5 (default) for Fira Code
  "terminal.integrated.lineHeight": 1.15, // for editor line-height 1.5 (default)
  "terminal.integrated.minimumContrastRatio": 1,
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.tabs.enabled": true,
  "window.autoDetectColorScheme": false,
  // "window.menuBarVisibility": "toggle",
  "window.titleBarStyle": "custom",
  // "window.nativeTabs": true,
  "workbench.activityBar.location": "hidden",
  "workbench.activityBar.orientation": "vertical",
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.editor.empty.hint": "hidden",
  "workbench.fontAliasing": "auto",
  "workbench.iconTheme": "catppuccin-mocha",
  "workbench.preferredDarkColorTheme": "Default Dark Modern",
  "workbench.preferredLightColorTheme": "Default Light Modern",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.excludeDirty": false,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 10,
  "workbench.editor.showTabs": "multiple",
  "workbench.sideBar.location": "right",
  "workbench.statusBar.visible": true,
  "workbench.tree.indent": 14,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.colorCustomizations": {
    "[Atom One Light]": {
      "editorIndentGuide.activeBackground1": "#D6D6D6",
      "editorIndentGuide.background1": "#E5E5E5"
    },
    "[Default Dark Modern]": {
      "editorIndentGuide.activeBackground1": "#606060",
      "editorIndentGuide.background1": "#303030"
    },
    "[Default Light Modern]": {
      "editorIndentGuide.activeBackground1": "#c3c3c3",
      "editorIndentGuide.background1": "#f3f3f3"
    },
    "[Night Owl]": {
      "editorIndentGuide.activeBackground1": "#022d50",
      "editorIndentGuide.background1": "#02223c"
    }
  },

  /*
    Editor
  */
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": true,
  "editor.accessibilitySupport": "off",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },
  "editor.copyWithSyntaxHighlighting": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.detectIndentation": true,
  "editor.emptySelectionClipboard": false,
  "editor.find.addExtraSpaceOnTop": false,
  "editor.formatOnSave": true,
  "editor.inlayHints.enabled": "off",
  "editor.inlineSuggest.enabled": true,
  "editor.linkedEditing": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.occurrencesHighlight": "off",
  "editor.overviewRulerBorder": false,
  "editor.quickSuggestions": {
    "comments": false,
    "other": true,
    "strings": true
  },
  "editor.renderControlCharacters": false,
  "editor.selectionHighlight": false,
  "editor.semanticHighlighting.enabled": true,
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
  "editor.wordWrap": "on",

  /*
    Emmet
  */
  "emmet.includeLanguages": {
    "blade": "html"
  },
  "emmet.showSuggestionsAsSnippets": false,
  "emmet.triggerExpansionOnTab": false,

  /*
    ESLint
    https://eslint.org/docs/user-guide/configuring
  */
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue"
  ],

  /*
    Extensions
  */
  "color-highlight.markerType": "dot-before",
  "errorLens.enabledDiagnosticLevels": ["warning", "error"],
  "errorLens.excludeBySource": ["cSpell", "Grammarly"],
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  "laravel-pint.enable": false,
  "prettier.enable": true,
  "redhat.telemetry.enabled": true,
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ],
  "vite.autoStart": false,
  "vsicons.dontShowNewVersionMessage": true,

  /*
    Files
  */
  "files.autoSave": "onWindowChange",
  "files.eol": "\n",
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/CVS": true,
    "**/Thumbs.db": true,
    "**/obj": true
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "search.exclude": {
    "**/.build": true,
    "**/.git": true,
    "**/.github": false,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/CHANGELOG*": true,
    "**/LICENSE*": true,
    "**/assets": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/public": true,
    "**/temp": true,
    "**/*.snap": true,
    "**/*.svg": true,
    "**/yarn.lock": true
  },

  /*
    Git & SCM
  */
  "[git-commit]": {
    "editor.rulers": [72, 100]
  },
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.untrackedChanges": "separate",
  "git.enableCommitSigning": true,
  "scm.defaultViewMode": "tree",
  "scm.diffDecorationsGutterWidth": 2,

  /*
    GitLens
  */
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.graph.layout": "editor",
  "gitlens.graph.minimap.enabled": false,
  "gitlens.menus": {
    "editor": {
      "blame": false,
      "clipboard": true,
      "compare": true,
      "history": false,
      "remote": false
    },
    "editorGroup": {
      "blame": true,
      "compare": false
    },
    "editorTab": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true
    },
    "explorer": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true
    },
    "scm": {
      "authors": true
    },
    "scmGroup": {
      "compare": true,
      "openClose": true,
      "stash": true
    },
    "scmGroupInline": {
      "stash": true
    },
    "scmItem": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": false,
      "stash": true
    }
  },
  "gitlens.views.commitDetails.files.layout": "tree",
  "gitlens.views.commits.files.layout": "tree",

  /*
    Language Specific
  */

  /*
    C#
  */
  "omnisharp.useEditorFormattingSettings": false,

  /*
    JavaScript & TypeScript
  */
  "javascript.preferences.importModuleSpecifier": "relative",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.updateImportsOnFileMove.enabled": "always",

  /*
    Go
  */
  "go.toolsManagement.autoUpdate": true,

  /*
    YAML
  */
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": [
      ".github/workflows/*.{yml,yaml}"
    ],
    "file:///home/boonyarit-iamsaard/.vscode-server/extensions/docsmsft.docs-yaml-1.0.5/dist/toc.schema.json": "/toc\\.yml/i"
  },

  "[aspnetcorerazor][csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp",
    "editor.tabSize": 4
  },
  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.tabSize": 4
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "[python]": {
    "editor.formatOnType": true
  },

  /*
    Vim
  */
  "vim.autoindent": true,
  "vim.easymotion": true,
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-i>": false,
    "<C-p>": false,
    "<C-q>": false,
    "<C-w>": false
  },
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.leader": "<space>",
  "vim.normalModeKeyBindings": [
    {
      "before": ["g", "R"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": ["H"],
      "commands": ["workbench.action.previousEditor"]
    },
    {
      "before": ["L"],
      "commands": ["workbench.action.nextEditor"]
    },
    {
      "before": ["<leader>", "w"],
      "commands": ["workbench.action.focusNextGroup"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["n", "n"],
      "commands": [":nohl"]
    },
    {
      "before": ["o"],
      "commands": ["editor.action.insertLineAfter"]
    },
    {
      "before": ["O"],
      "commands": ["editor.action.insertLineBefore"]
    }
  ],
  "vim.useCtrlKeys": true,
  "vim.useSystemClipboard": true,

  /*
    workbench
  */
  "window.newWindowDimensions": "inherit",
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.list.smoothScrolling": true,
  "workbench.settings.editor": "json",
  "docker.extension.dockerEngineAvailabilityPrompt": false,
  "pgsql.serverGroups": [
    {
      "name": "Local",
      "id": "CF1C5A02-6D40-489A-940E-642B88A5F6B6",
      "isDefault": true
    }
  ],
  "pgsql.connections": [
    {
      "id": "A1A5C75A-F2F6-43F2-A3B3-C5B35F5B7953",
      "groupId": "CF1C5A02-6D40-489A-940E-642B88A5F6B6",
      "authenticationType": "SqlLogin",
      "connectTimeout": 15,
      "applicationName": "vscode-pgsql",
      "clientEncoding": "utf8",
      "sslmode": "prefer",
      "server": "localhost",
      "user": "postgres",
      "password": "",
      "savePassword": true,
      "database": "next-kit",
      "profileName": "next-kit",
      "expiresOn": 0
    }
  ],
  "json.schemaDownload.enable": true,
  "docker.extension.enableComposeLanguageServer": false,
  "cursor.cpp.disabledLanguages": ["plaintext"]
}
